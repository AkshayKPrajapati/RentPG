<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Background Image -->
        <ImageView
            android:id="@+id/roomImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <!-- Room Number -->
        <TextView
            android:id="@+id/roomNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/roomImage"
            android:text="Room No: 101"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <!-- Hotel Name -->
        <TextView
            android:id="@+id/hotelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/roomNumber"
            android:text="Hotel Paradise"
            android:textSize="14sp" />

        <!-- Price Label -->
        <TextView
            android:id="@+id/priceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hotelName"
            android:text="Price:"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Price Value -->
        <TextView
            android:id="@+id/priceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/priceLabel"
            android:layout_alignBaseline="@id/priceLabel"
            android:text="â‚¹5000"
            android:textSize="14sp" />

        <!-- Description -->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/priceLabel"
            android:layout_marginTop="4dp"
            android:text="Spacious room with sea view and modern amenities."
            android:textSize="14sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
